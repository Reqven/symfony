{% extends 'base.html.twig' %}

{% block body %}
    <h1>Places list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td><a href="{{ path('places_show', { 'id': place.id }) }}">{{ place.id }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('places_show', { 'id': place.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('places_edit', { 'id': place.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('places_new') }}">Create a new place</a>
        </li>
    </ul>
{% endblock %}
